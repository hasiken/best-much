<div class="warpper">
  <div class="soccer">
  <%= link_to("トップページに戻る", root_path, {class: "title-name"})%>
 </div>
 <div class="goal">
    <div class= "goal__AA">
      <%= @post.cf %>
    </div>
    <div class= "goal__BB">
      <%= @post.rwg %>
    </div>
    <div class= "goal__CC">
      <%= @post.lwg %>
    </div>
    <div class= "goal__DD">
      <%= @post.lcm %>
    </div>
    <div class= "goal__EE">
      <%= @post.rcm %>
    </div>
    <div class= "goal__FF">
      <%= @post.cdm %>
    </div>
    <div class= "goal__GG">
      <%= @post.lsb %>
    </div>
     <div class= "goal__HH">
      <%= @post.rcb %>
    </div>
    <div class= "goal__II">
      <%= @post.lcb %>
    </div>
     <div class= "goal__KK">
      <%= @post.rsb %>
    </div>
     <div class= "goal__LL">
      <%= @post.gc %>
    </div>
  </div>
  <h3>いいね件数: <%= @post.likes.count %></h3>
  <% if current_user.already_liked?(@post) %>
  <%= button_to 'いいねを取り消す', post_like_path(@post), method: :delete %>
<% else %>
  <%= button_to 'いいね', post_likes_path(@post) %>
<% end %>
<h2>いいねしたユーザー</h2>
<% @post.liked_users.each do |user| %>
  <li><%= user.nickname %></li>
<% end %>
</div>
