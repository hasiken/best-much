
<div class="warpper">
    <div class="soccer">
       <div class="role">
       </div>
       <div class="point">
          <div class="point__left">
            <%= link_to "Top page", root_path, class: "point__left--item" %>
          </div>
          <div class="point__main">
            <%= link_to "My page", "/users/#{current_user.id}", class: "point__main--pege" %>
          </div>
          <div class="point__show">
             <%= link_to "List of posts", long_posts_path, class: "point__show--top" %>
          </div>
       </div>
    </div>
    <div class="desk">
    <div class="desk__left"></div>
    <div class=desk__middle>
      <%= form_with model: @post, class: :form,local: true do |form| %>
        <%= form.text_field :title, placeholder: :タイトルを入力してください,class: :form__top%>
        <%= form.select :cf, [['9 MARTIAL'], ['10 RASHFORD'],['26 GREENWOOD'],['44 CHONG'],['21 JAMES'],['20 DALOT'],['8 MATA']],{}, { class: "form__CF" } %>
        <%= form.select :rwg, [['9 MARTIAL'], ['10 RASHFORD'],['26 GREENWOOD'],['44 CHONG'],['21 JAMES'],['20 DALOT'],['8 MATA']],{}, { class: "form__RWG" } %>
        <%= form.select :lwg, [['9 MARTIAL'], ['10 RASHFORD'],['26 GREENWOOD'],['44 CHONG'],['21 JAMES'],['20 DALOT'],['8 MATA']],{},{ class: "form__LWG" } %>
        <%= form.select :lcm, [['8 MATA'], ['6 POGBA'],['14 LINGARD'],['15 PEREIRA'],['17 FRED'],['28 GOMES'],['39 McTOMINAY'],['31 MATIC']],{}, { class: "form__LCM" } %>
        <%= form.select :rcm, [['8 MATA'], ['6 POGBA'],['14 LINGARD'],['15 PEREIRA'],['17 FRED'],['28 GOMES'],['39 McTOMINAY'],['31 MATIC']],{}, { class: "form__RCM" } %>
        <%= form.select :cdm, [['8 MATA'], ['6 POGBA'],['14 LINGARD'],['15 PEREIRA'],['17 FRED'],['28 GOMES'],['39 McTOMINAY'],['31 MATIC']],{}, { class: "form__CDM" } %>
        <%= form.select :lsb, [['23 SHOW'], ['20 DALOT'],['29 WAN-BISSAKA']],{}, { class: "form__LSB" } %>
        <%= form.select :rcb, [['2 LINDELOF'], ['3 BAILLY'],['5 MAGUIRE'],['38 TUANZEBE']],{}, { class: "form__RCB" } %>
        <%= form.select :lcb, [['2 LINDELOF'], ['3 BAILLY'],['5 MAGUIRE'],['38 TUANZEBE']],{}, { class: "form__LCB" } %>
        <%= form.select :rsb, [['23 SHOW'], ['20 DALOT'],['29 WAN-BISSAKA']],{}, { class: "form__RSB" } %>
        <%= form.select :gc, [['1 DE GEA'], ['22 ROMERO'],['13 GRANT']],{}, { class: "form__GC" } %>
        <%= form.submit "投稿する", class: :form__send%>
      <% end %>
    </div>
    <div class="desk__right"></div>
</div>

  
  
 
 
  

